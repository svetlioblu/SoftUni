                    <a class="home" href="/">
                        <i>Petstagram</i>
                    </a>
                </div>

                <div class="nav-links">
                    <ul class="nav-group">
                        <li class="nav-item">

                            <a href="#">
                                <i>Catalog</i>
                            </a>
                        </li>
                        {{#if isAuthenticated}}
                        <!--For login users-->
                        <li class="nav-item">
                            <a href="#">
                                <i>Add Photo</i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#">
                                <i>Profile</i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/users/logout">
                                <i>Logout</i>
                            </a>
                        </li>
                        {{else}}
                        <!--For Guest User-->
                        <li class="nav-item">
                            <a href="/users/login">
                                <i>Login</i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/users/register">
                                <i>Register</i>
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

